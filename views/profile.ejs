  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="well">
          <h3><span class="glyphicon glyphicon-user"></span> Profile Info</h3>
          <% if (user.local.email) { %>
            <p>
              <% if(user.local.name) { %><strong>Name</strong>:
                <%= user.local.name %><br>
              <% } %>
                <strong>Email</strong>:
                <%= user.local.email %><br>
              <% if(user.local.state) {%><strong>State</strong>:
                  <%= user.local.state %><br>
              <% } %>
              <% if(user.local.city) { %><strong>City</strong>:
                <%= user.local.city %><br>
              <% } %>
            </p>
            <% } %>
        </div>
      </div>
    </div>
